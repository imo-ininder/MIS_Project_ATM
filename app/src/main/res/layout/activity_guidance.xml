<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.projectt.guidance">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="173dp"
            android:id="@+id/imageView2"
            android:src="@drawable/blue_step"
            android:layout_marginBottom="67dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:onClick="gotostepteach" />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/imageView3"
            android:src="@drawable/blue_rule"
            android:layout_above="@+id/imageView2"
            android:layout_alignEnd="@+id/imageView2"
            android:layout_marginEnd="43dp"
            android:onClick="gotoruleteach" />

        <ImageView
            android:layout_width="135dp"
            android:layout_height="140dp"
            android:id="@+id/imageView4"
            android:src="@drawable/blue_guide2"
            android:layout_above="@+id/imageView5"
            android:layout_toStartOf="@+id/imageView7" />

        <ImageView
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:id="@+id/imageView5"
            android:src="@drawable/blue_cancell"
            android:layout_above="@+id/imageView6"
            android:layout_alignStart="@+id/imageView6"
            android:onClick="gotocancelteach"
            android:nestedScrollingEnabled="false" />

        <ImageView
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:id="@+id/imageView6"
            android:src="@drawable/blue_nfc"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_toStartOf="@+id/imageView8"
            android:onClick="gotonfcteach" />

        <ImageView
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:id="@+id/imageView7"
            android:src="@drawable/blue_giveup"
            android:layout_below="@+id/imageView9"
            android:layout_above="@+id/imageView6"
            android:layout_alignParentEnd="true"
            android:onClick="gotogiveupteach" />

        <ImageView
            android:layout_width="85dp"
            android:layout_height="65dp"
            android:id="@+id/imageView8"
            android:src="@drawable/blue_report"
            android:layout_alignTop="@+id/imageView2"
            android:layout_alignBottom="@+id/imageView6"
            android:layout_alignParentEnd="true"
            android:onClick="gotoreportteach" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView9"
            android:src="@drawable/blue_atm"
            android:layout_alignTop="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4" />
    </RelativeLayout>

</RelativeLayout>
