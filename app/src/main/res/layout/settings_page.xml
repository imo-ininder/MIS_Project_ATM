<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.projectt.settings_page">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="設定"
            android:id="@+id/textView3"
            android:textSize="40sp"
            android:textColor="#6d6969" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:text="通知"
                android:id="@+id/switchRetrieve"
                android:checked="true"
                android:textSize="30dp"
                android:layout_weight="0.12"
                android:textColor="#6c6a6a" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:weightSum="1"
            android:id="@+id/notification_types">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.62"
                android:id="@+id/radioGroup"
                android:visibility="visible">


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通知欄"
                    android:id="@+id/radioButton"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="彈出視窗"
                    android:id="@+id/radioButton2"
                    android:checked="false" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="主題"
                android:id="@+id/textView13"
                android:layout_weight="0.11"
                android:textSize="30dp"
                android:textColor="#555353" />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/button8"
                android:focusable="false"
                android:background="#3bb6d2"
                android:singleLine="false"
                android:onClick="chooseBlue" />
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/button9"
                android:focusable="false"
                android:background="#eb1346"
                android:onClick="chooseRed" />
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/button10"
                android:focusable="false"
                android:background="#fabf0c"
                android:onClick="chooseYellow" />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/button12"
                android:focusable="false"
                android:background="#673AB7"
                android:onClick="choosePurple" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="修改密碼"
                    android:id="@+id/textView14"
                    android:textSize="25dp"
                    android:textColor="#666363"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="2" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/editText"
                    android:layout_alignTop="@+id/textView14"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/button14"
                    android:layout_weight="2" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="原本密碼"
                    android:textColor="#666363"
                    android:id="@+id/textView19"
                    android:layout_alignParentTop="true"
                     android:layout_alignParentStart="true"
                    android:layout_alignEnd="@+id/textView14"
                    android:textSize="25dp"
                    android:layout_weight="2" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/editText2"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/button14"
                    android:layout_weight="2" />
            </LinearLayout>

            <Button
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="確認修改"
                android:id="@+id/button14"
                android:onClick="updatepwd"
                android:layout_gravity="bottom"
                android:layout_below="@+id/editText"
                android:layout_alignParentStart="true" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
